<script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>

<script>
    // আপনার দেওয়া কনফিগারেশন
    const firebaseConfig = {
      apiKey: "AIzaSyDJYDmNyk4tV0OgV3e-F28WSn6i7xLzaRQ",
      authDomain: "frf-app-e09c3.firebaseapp.com",
      projectId: "frf-app-e09c3",
      storageBucket: "frf-app-e09c3.firebasestorage.app",
      messagingSenderId: "743522057184",
      appId: "1:743522057184:web:d7f08c4268406fb722c985"
    };

    // Firebase Init Check
    if (!firebase.apps.length) {
        firebase.initializeApp(firebaseConfig);
    } else {
        firebase.app(); // if already initialized, use that one
    }
    const db = firebase.database();

    const MEMBER_PIN = "1234";
    const ADMIN_PIN = "9999"; 

    let currentUser = localStorage.getItem('frf_user_name');
    let userRole = localStorage.getItem('frf_user_role');
    let currentBalanceVal = 0; // বর্তমান ব্যালেন্স ট্র্যাক করার জন্য

    window.onload = function() {
        if (currentUser && userRole) {
            enterDashboard();
        } else {
            document.getElementById('login-screen').style.display = 'flex';
        }
    };

    function firstTimeLogin() {
        const pin = document.getElementById('input-pin').value;
        const name = document.getElementById('input-name').value;
        if (!name) { alert("দয়া করে নাম লিখুন"); return; }

        if (pin === MEMBER_PIN) {
            saveAndEnter(name, 'member');
        } else if (pin === ADMIN_PIN) {
            saveAndEnter(name, 'admin');
        } else {
            alert("ভুল পিন কোড!");
        }
    }

    function saveAndEnter(name, role) {
        localStorage.setItem('frf_user_name', name);
        localStorage.setItem('frf_user_role', role);
        currentUser = name;
        userRole = role;
        enterDashboard();
    }

    function enterDashboard() {
        document.getElementById('login-screen').style.display = 'none';
        document.getElementById('dashboard-screen').style.display = 'block';
        document.getElementById('display-name').innerText = currentUser;
        document.getElementById('dep-name').value = currentUser;

        if (userRole === 'admin') {
            const badge = document.getElementById('role-badge');
            badge.innerText = "এডমিন"; badge.style.background = "#e74c3c"; badge.style.color = "white";
            document.getElementById('btn-expense').style.display = 'flex';
            document.getElementById('admin-pending-area').style.display = 'block';
            document.getElementById('edit-balance-btn').style.display = 'inline-block'; // Edit btn show
            loadPendingRequests();
        }
        loadData();
    }

    function logout() {
        if(confirm("আপনি কি লগআউট করতে চান?")) {
            localStorage.clear();
            location.reload();
        }
    }

    // --- জমা সাবমিট ফিক্স ---
    function submitDeposit() {
        // বাটনে চাপলে কাজ হচ্ছে কিনা চেক
        console.log("Deposit Button Clicked");

        const amount = document.getElementById('dep-amount').value;
        const method = document.getElementById('dep-method').value;
        const last3 = document.getElementById('dep-last3').value;
        const trx = document.getElementById('dep-trx').value;

        if (!amount || !last3) {
            alert("টাকার পরিমাণ এবং শেষ ৩ ডিজিট অবশ্যই দিতে হবে!");
            return;
        }

        const data = {
            name: currentUser,
            amount: parseFloat(amount),
            method: method,
            last3: last3,
            trxId: trx || "N/A",
            status: "pending",
            timestamp: firebase.database.ServerValue.TIMESTAMP,
            dateStr: new Date().toLocaleDateString('bn-BD')
        };

        // Firebase Push
        db.ref('pending_requests').push(data)
            .then(() => {
                showToast("অনুরোধ সফলভাবে পাঠানো হয়েছে!");
                closeModal('deposit');
                document.getElementById('dep-amount').value = '';
                document.getElementById('dep-last3').value = '';
                document.getElementById('dep-trx').value = '';
            })
            .catch((error) => {
                alert("এরর: ডাটা পাঠানো যায়নি। ইন্টারনেট চেক করুন।\n" + error.message);
                console.error("Firebase Error:", error);
            });
    }

    function submitExpense() {
        const reason = document.getElementById('exp-reason').value;
        const amount = document.getElementById('exp-amount').value;
        if (!reason || !amount) { alert("সব তথ্য দিন"); return; }

        db.ref('transactions').push({
            type: 'expense', name: reason, user: currentUser,
            amount: parseFloat(amount),
            timestamp: firebase.database.ServerValue.TIMESTAMP,
            dateStr: new Date().toLocaleDateString('bn-BD')
        }).then(() => {
            showToast("খরচ এন্ট্রি হয়েছে!");
            closeModal('expense');
            document.getElementById('exp-reason').value = '';
            document.getElementById('exp-amount').value = '';
        });
    }

    // --- ব্যালেন্স এডিট ফিচার ---
    function editBalance() {
        let newBal = prompt("নতুন ব্যালেন্স কত হবে? (শুধুমাত্র সংখ্যা দিন)");
        if (newBal === null || newBal === "") return;
        
        newBal = parseFloat(newBal);
        if (isNaN(newBal)) { alert("সঠিক সংখ্যা দিন!"); return; }

        let pin = prompt("কনফার্ম করতে এডমিন পিন (9999) দিন:");
        if (pin !== ADMIN_PIN) {
            alert("পিন ভুল! অ্যাক্সেস ডিনাইড।");
            return;
        }

        // ব্যালেন্স এডজাস্টমেন্ট ক্যালকুলেশন
        let diff = newBal - currentBalanceVal;
        if (diff === 0) { alert("ব্যালেন্স একই আছে, পরিবর্তনের প্রয়োজন নেই।"); return; }

        const type = diff > 0 ? 'deposit' : 'expense';
        const adjustAmount = Math.abs(diff);

        db.ref('transactions').push({
            type: type,
            name: "ব্যালেন্স সংশোধন (Admin)",
            user: currentUser,
            amount: adjustAmount,
            method: "Manual Adjustment",
            timestamp: firebase.database.ServerValue.TIMESTAMP,
            dateStr: new Date().toLocaleDateString('bn-BD')
        }).then(() => {
            showToast("ব্যালেন্স সফলভাবে আপডেট হয়েছে!");
        });
    }

    // --- ডাটা লোড ---
    function loadData() {
        db.ref('transactions').orderByChild('timestamp').limitToLast(50).on('value', snapshot => {
            const listEl = document.getElementById('list-all');
            listEl.innerHTML = '';
            let totalIn = 0, totalOut = 0;
            let items = [];

            snapshot.forEach(child => items.push({key: child.key, ...child.val()}));
            
            items.forEach(i => {
                if(i.type === 'deposit') totalIn += i.amount;
                else totalOut += i.amount;
            });

            currentBalanceVal = totalIn - totalOut; // গ্লোবাল ভেরিয়েবলে আপডেট
            document.getElementById('balance').innerText = currentBalanceVal.toLocaleString('bn-BD');
            document.getElementById('total-in').innerText = totalIn.toLocaleString('bn-BD');
            document.getElementById('total-out').innerText = totalOut.toLocaleString('bn-BD');

            items.reverse().forEach(item => {
                const isDeposit = item.type === 'deposit';
                const html = `
                    <div class="log-item">
                        <div class="log-left">
                            <div class="log-icon" style="${isDeposit ? '' : 'background:#ffebee; color:var(--danger)'}">
                                <i class="fas ${isDeposit ? 'fa-arrow-down' : 'fa-arrow-up'}"></i>
                            </div>
                            <div class="log-details">
                                <h4>${item.name}</h4>
                                <p>${item.dateStr} | ${item.method || 'অফিসিয়াল'}</p>
                            </div>
                        </div>
                        <div class="amount-txt" style="color:${isDeposit ? 'var(--success)' : 'var(--danger)'}">
                            ${isDeposit ? '+' : '-'} ৳${item.amount}
                        </div>
                    </div>
                `;
                listEl.innerHTML += html;
            });
        });

        db.ref('rejected_requests').orderByChild('timestamp').limitToLast(20).on('value', snapshot => {
            const rejListEl = document.getElementById('list-rejected');
            rejListEl.innerHTML = '';
            let items = [];
            snapshot.forEach(child => items.push(child.val()));
            
            if(items.length === 0) {
                rejListEl.innerHTML = '<p style="text-align: center; color: #999; margin-top: 20px;">নেই</p>';
                return;
            }

            items.reverse().forEach(item => {
                const html = `
                    <div class="log-item" style="opacity: 0.7;">
                        <div class="log-left">
                            <div class="log-icon" style="background:#eee; color:#666;"><i class="fas fa-times"></i></div>
                            <div class="log-details">
                                <h4>${item.name} (বাতিল)</h4>
                                <p>${item.dateStr} | কারণ: ${item.reason || 'অজানা'}</p>
                            </div>
                        </div>
                        <div class="amount-txt" style="color:#666;">৳${item.amount}</div>
                    </div>
                `;
                rejListEl.innerHTML += html;
            });
        });
    }

    function loadPendingRequests() {
        db.ref('pending_requests').on('value', snapshot => {
            const pList = document.getElementById('pending-list');
            const pCount = document.getElementById('pending-count');
            pList.innerHTML = '';
            let count = 0;

            snapshot.forEach(child => {
                count++;
                const item = child.val();
                const key = child.key;
                const html = `
                    <div class="pending-row">
                        <div style="font-weight:600; font-size:15px;">
                            ${item.name} <span style="float:right; color:var(--primary);">৳${item.amount}</span>
                        </div>
                        <div style="font-size:12px; color:#666; margin-top:4px;">
                            ${item.method} | শেষ ৩: ${item.last3}
                        </div>
                        <div class="p-actions">
                            <button class="btn-sm" style="background:var(--danger);" onclick="rejectReq('${key}', '${item.name}', ${item.amount})">বাতিল</button>
                            <button class="btn-sm" style="background:var(--success);" onclick="approveReq('${key}')">গ্রহণ</button>
                        </div>
                    </div>
                `;
                pList.innerHTML += html;
            });
            pCount.innerText = count;
            if(count === 0) pList.innerHTML = '<p style="font-size:12px; text-align:center; color:#888;">কোনো পেন্ডিং নেই</p>';
        });
    }

    window.approveReq = function(key) {
        if(!confirm("নিশ্চিত জমা করবেন?")) return;
        db.ref('pending_requests/' + key).once('value').then(snap => {
            const data = snap.val();
            const verifiedData = {
                type: 'deposit', name: data.name, amount: data.amount,
                method: data.method, timestamp: firebase.database.ServerValue.TIMESTAMP,
                dateStr: new Date().toLocaleDateString('bn-BD')
            };
            const updates = {};
            updates['/transactions/' + Date.now()] = verifiedData;
            updates['/pending_requests/' + key] = null;
            return db.ref().update(updates);
        }).then(() => showToast("জমা গ্রহণ করা হয়েছে!"));
    };

    window.rejectReq = function(key, name, amount) {
        const reason = prompt("বাতিলের কারণ লিখুন:", "যাচাইকরণে ব্যর্থ");
        if(reason === null) return;
        db.ref('pending_requests/' + key).once('value').then(snap => {
            const data = snap.val();
            const rejectedData = {
                name: data.name, amount: data.amount, reason: reason,
                timestamp: firebase.database.ServerValue.TIMESTAMP,
                dateStr: new Date().toLocaleDateString('bn-BD')
            };
            const updates = {};
            updates['/rejected_requests/' + Date.now()] = rejectedData;
            updates['/pending_requests/' + key] = null;
            return db.ref().update(updates);
        }).then(() => showToast("বাতিল করা হয়েছে"));
    };

    function openModal(id) { document.getElementById('modal-'+id).style.display = 'flex'; }
    function closeModal(id) { document.getElementById('modal-'+id).style.display = 'none'; }
    
    function switchTab(tab) {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.list-container').forEach(l => l.style.display = 'none');
        document.getElementById('tab-'+tab).classList.add('active');
        document.getElementById('list-'+tab).style.display = 'block';
    }

    function showToast(msg) {
        const t = document.getElementById("toast");
        document.getElementById("toast-msg").innerText = msg;
        t.className = "show";
        setTimeout(() => { t.className = t.className.replace("show", ""); }, 3000);
    }
</script>

</body>
</html>
